<h1>New Game</h1>
<div class="letterbox">
  <% @letters.each do |letter| %>
    <div class="letter"><%= letter %></div>
  <% end %>
</div>
<form id ="user-word" action="/score" method="post">
<label for="word">What is the longest word you can guess?</label>
<input type="text" id="word" name="word">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<%= hidden_field_tag 'letter_grid', value=@letters %>
</form>

